<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:orientation="horizontal"
        android:weightSum="4">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            app:contentPadding="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/kpi_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/total_seller_bg"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tv_kpi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Productive"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="2dp"
                    android:text="10/30"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:layout_below="@+id/tv_kpi_name"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_txt_kpi_percent"/>

                <TextView
                    android:id="@+id/tv_txt_kpi_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="(70%)"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_value"
                    android:layout_marginRight="10dp"
                    android:layout_alignBottom="@+id/tv_value"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:layout_marginRight="4dp"
            app:contentPadding="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/kpi_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/total_seller_bg"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tv_kpi_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Coverage"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_value1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="2dp"
                    android:text="2/10"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:layout_below="@+id/tv_kpi_name1"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_txt_kpi_percent1"/>

                <TextView
                    android:id="@+id/tv_txt_kpi_percent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="(20%)"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_value1"
                    android:layout_marginRight="10dp"
                    android:layout_alignBottom="@+id/tv_value1"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:layout_marginRight="4dp"
            app:contentPadding="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/kpi_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/total_seller_bg"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tv_kpi_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Lines"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_value2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="2dp"
                    android:text="30/50"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:layout_below="@+id/tv_kpi_name2"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_txt_kpi_percent2"/>

                <TextView
                    android:id="@+id/tv_txt_kpi_percent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="(60%)"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_value2"
                    android:layout_marginRight="10dp"
                    android:layout_alignBottom="@+id/tv_value2"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:layout_marginRight="4dp"
            app:contentPadding="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/kpi_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/total_seller_bg"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tv_kpi_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Compliance"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_value3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="2dp"
                    android:text="30/50"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:layout_below="@+id/tv_kpi_name3"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_txt_kpi_percent3"/>

                <TextView
                    android:id="@+id/tv_txt_kpi_percent3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="(60%)"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_value3"
                    android:layout_marginRight="10dp"
                    android:layout_alignBottom="@+id/tv_value3"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/retailer_list_view"
        android:layout_below="@+id/card_view"/>

</RelativeLayout>