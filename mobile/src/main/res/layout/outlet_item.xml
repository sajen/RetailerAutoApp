<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="5dp"
    app:contentPadding="0dp">

    <RelativeLayout
        android:id="@+id/kpi_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_kpi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:gravity="start|center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Retailer Name"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="2dp"
            android:text="Tambaram West"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/tv_kpi_name"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_txt_kpi_percent"/>

        <ImageView
            android:id="@+id/tv_txt_kpi_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_value"
            android:layout_marginRight="10dp"
            android:padding="3dp"
            android:src="@drawable/ic_directions_black_24dp"
            android:layout_alignBottom="@+id/tv_value"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>